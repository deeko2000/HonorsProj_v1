<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horse_details_layout">



    <!-- ScrollView for the rest of the layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Root LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- LineChart -->
            <RelativeLayout
                android:id="@+id/relLay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">



                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />

            </RelativeLayout>

            <!-- FrameLayout with Black Border -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- LinearLayout for Horse Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp">

                    <!-- Horse Details Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horse Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Horse Information TextViews -->

                </LinearLayout>

                <!-- Black Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@android:color/black">

                    <!-- LinearLayout for Horse Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="16dp">

                        <!-- Horse Details Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horse Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Horse Information -->
                        <TextView
                            android:id="@+id/horseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horse: Mount Gallion"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age: 6"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex: Gelding"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseColour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colour: B"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseRegion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Region: IRE"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseTrainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trainer: Mark Walford"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner: Neil Readman"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number: 1"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseJockey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jockey: Tom Midgley"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/horseLastRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Run: 17"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>