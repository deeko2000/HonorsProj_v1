<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horse_details_layout">





        <!-- Root LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- LineChart -->
            <RelativeLayout
                android:id="@+id/relLay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/scatter_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </RelativeLayout>

            <!-- FrameLayout with Black Border -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- LinearLayout for Horse Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp">

                    <!-- Horse Details Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horse Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Horse Information TextViews -->

                </LinearLayout>

                <!-- Black Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@android:color/black">

                    <!-- LinearLayout for Horse Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="16dp">

                        <!-- Horse Details Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Race Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Horse Information -->
                        <TextView
                            android:id="@+id/courseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Course: Mount Gallion"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/raceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: 6"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance: Gelding"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/raceClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class: B"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type: IRE"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age Band: Mark Walford"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/prize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize: Neil Readman"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/fieldSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Field-Size: 1"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/going"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Going: Tom Midgley"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/surface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surface: 17"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

</RelativeLayout>