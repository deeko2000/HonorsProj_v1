<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/horse_comparison_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Your other views here -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box"> <!-- Set the background to the drawable -->

                <TextView
                    android:id="@+id/previousSelectionTextView"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Previous Selection:  "
                    android:textColor="@android:color/black"
                    android:textStyle="bold" /> <!-- Set text color to black -->

            </FrameLayout>

            <TextView
                android:id="@+id/compareTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compare With "
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/horseView"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/raceView"
                android:layout_margin="16dp"
                android:hint="Select Horse">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_horseCompView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/raceView"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add BarChart below AutoCompleteTextView LINE GRAPH WITH
            BOTH FORMS VISUALISED-->

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/bothLineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                />

            <!-- Add Stacked BarChart below BarChart average positions
            of horses across different race distances-->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/stackedBarChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white" />

            <!-- Horizontal LinearLayout for legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <!-- TextView with color square -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorBlue" /> <!-- Set your color here -->

                    <TextView
                        android:id="@+id/redbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Blue" />
                </LinearLayout>

                <!-- TextView with color square -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorRed" /> <!-- Set your color here -->

                    <TextView
                        android:id="@+id/bluebox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Red" />
                </LinearLayout>

            </LinearLayout>
            <!-- End of legend -->

            <!-- Add BoxPlot below Stacked BarChart -->
            <!-- Define your BoxPlot view here -->




        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
