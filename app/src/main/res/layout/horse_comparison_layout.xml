<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horse_comparison_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Your other views here -->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box"> <!-- Set the background to the drawable -->

            <TextView
                android:id="@+id/previousSelectionTextView"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Previous Selection:  "
                android:textColor="@android:color/black"
                android:textStyle="bold" /> <!-- Set text color to black -->

        </FrameLayout>

        <TextView
            android:id="@+id/compareTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compare With "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/meetingView"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/raceView"
            android:layout_margin="16dp"
            android:hint="@string/race">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_meetingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/raceView"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="horse_comparison_layout"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
